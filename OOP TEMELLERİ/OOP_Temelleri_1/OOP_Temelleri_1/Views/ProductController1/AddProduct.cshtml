@model OOP_Temelleri_1.Entity.Product
    <!-- eklemede bu şekilde-->

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>
<form method="post">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Stok Sayısı")
    @Html.TextBoxFor(x => x.stok, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Ürün Ekle</button>
</form>
